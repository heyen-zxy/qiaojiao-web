<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="" class="img-circle" alt="User Image" />
        <canvas class='canvas' style="display:none" first_name="<%= current_admin.name.first %>"></canvas>
      </div>
      <div class="pull-left info">
        <p><%= current_admin.name %></p>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>

    <!-- search form (Optional) -->

    <!-- /.search form -->

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">HEADER</li>
        <!-- Optionally, you can add icons to the links -->
      <li class="<%= active_class :products %>">
        <%= link_to admin_products_path do %>
          <i class="fa fa-shopping-cart"></i> <span>商品、服务</span>
        <% end %>
      </li>

      <li class="<%= active_class :orders %>">
        <%= link_to admin_orders_path do %>
          <i class="fa fa-reorder"></i> <span>订单</span>
        <% end %>
      </li>

      <li class="<%= active_class :users %>">
        <%= link_to admin_users_path do %>
          <i class="fa fa-users"></i> <span>用户</span>
        <% end %>
      </li>

      <li class="<%= active_class :rosters %>">
        <%= link_to admin_rosters_path do %>
          <i class="fa  fa-user-secret"></i> <span>师傅、配送人员</span>
        <% end %>
      </li>

      <li class="<%= active_class :in_payments %>">
        <%= link_to admin_in_payments_path do %>
          <i class="fa fa-mail-reply "></i> <span>用户支付记录</span>
        <% end %>
      </li>

      <li class="<%= active_class :user_commission_logs %>">
        <%= link_to admin_user_commission_logs_path do %>
          <i class="fa fa-share-alt"></i> <span>用户分享佣金记录</span>
        <% end %>
      </li>

      <li class="<%= active_class :admin_commission_logs %>">
        <%= link_to admin_admin_commission_logs_path do %>
          <i class="fa fa-truck"></i> <span>师傅佣金记录</span>
        <% end %>
      </li>

      <li class="<%= active_class :commission_logs %>">
        <%= link_to admin_commission_logs_path do %>
          <i class="fa fa-money"></i> <span>佣金提现记录</span>
        <% end %>
      </li>

      <li class="<%= active_class :banners %>">
        <%= link_to admin_banners_path do %>
          <i class="fa  fa-file-image-o"></i> <span>流动广告</span>
        <% end %>
      </li>

      <li class="<%= active_class :news %>">
        <%= link_to admin_news_index_path do %>
          <i class="fa fa-newspaper-o"></i> <span>文字流动广告</span>
        <% end %>
      </li>



<!--      <li class="treeview">-->
<!--        <a href="#"><i class='fa fa-link'></i> <span>Multilevel</span> <i class="fa fa-angle-left pull-right"></i></a>-->
<!--        <ul class="treeview-menu">-->
<!--          <li><a href="#">Link in level 2</a></li>-->
<!--          <li><a href="#">Link in level 2</a></li>-->
<!--        </ul>-->
<!--      </li>-->
      <% if current_admin.role? :super_admin %>
      <li>
        <%= link_to rails_admin_path do %>
          <i class="fa fa-gear"></i> <span>后台管理</span>
        <% end %>
      </li>
      <% end %>
    </ul><!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
