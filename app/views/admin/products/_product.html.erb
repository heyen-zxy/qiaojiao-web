<tr id="product_<%= product.id %>">
  <td ><%= product.no %></td>
  <td><%= product.name %></td>
  <td><%= product.get_product_type %></td>
  <td><%= product.price %></td>
  <td><%= product.get_status %></td>
  <td><%= product.sale %></td>
  <td>
    <% if can? :products, :change_status %>
      <% if product.status == 'on' %>
        <%= link_to 'JavaScript:void(0)', onclick: "change_status(#{product.id}, 'off')", class: "btn btn-danger btn-xs" do %>
          <i class="fa fa-close"></i>下架
        <% end %>
      <% else %>
        <%= link_to 'JavaScript:void(0)', onclick: "change_status(#{product.id}, 'on')", class: "btn btn-success btn-xs" do %>
          <i class="fa fa-check"></i>上架
        <% end %>
      <% end %>
    <% end %>
    <% if can? :products, :edit %>
      <%= link_to edit_admin_product_path(product), class: 'btn btn-primary btn-xs' do %>
        <i class="fa fa-edit"></i>编辑
      <% end %>
    <% end %>
  </td>
</tr>