<div class="col-md-12">
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">订单列表
      </h3>
    </div>
    <div class="box-tools" style="margin-top: 10px;">
      <%= form_tag admin_orders_path, method: :get do %>
        <div class="input-group input-group-sm">
          <div>
            <div class="col-xs-6 col-md-6"></div>
            <div class="col-xs-6 col-md-3"><%= select_tag :status, options_for_select(Order.status_select, params[:status]), include_blank: '所有状态', class: 'form-control', style: "width: 100%" %></div>
            <div class="col-xs-6 col-md-3">
              <input type="text" name="table_search" class="form-control" placeholder="编号、商品服务名、用户名、手机检索" value="<%= params[:table_search] %>">
            </div>
          </div>

          <div class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
          </div>
        </div>
      <% end %>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
      <table class="table table-striped">
        <tbody>
        <tr>
          <th>订单号</th>
          <th>下单人</th>
          <th>下单人号码</th>
          <th>总价格</th>
          <th>状态</th>
          <th>配送、服务人</th>
          <th>支付时间</th>
          <th></th>
        </tr>

        <% @orders.each do |order| %>
          <%= render partial: 'admin/orders/order', locals: {order: order} %>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="box-footer clearfix">
      <div class="pull-right pagination-sm no-margin">
        <%= paginate @orders, params: {status: params[:status], table_search: params[:table_search]} %>
      </div>

    </div>
  </div>
</div>


