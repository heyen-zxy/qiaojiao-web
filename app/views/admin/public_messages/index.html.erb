<div class="col-md-12">
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">周边消息
        <% if can? :new, :public_messages %>
          <small><%= link_to '添加', new_admin_public_message_path, class: 'font-a label bg-green' %></small>
        <% end %>
      </h3>
    </div>
    <div class="box-tools" style="margin-top: 10px;">
      <%= form_tag admin_public_messages_path, method: :get do %>
        <div class="input-group input-group-sm">
          <div>
            <div class="col-xs-6 col-md-9"></div>
            <div class="col-xs-6 col-md-3">
              <input type="text" name="table_search" class="form-control" placeholder="用户名、手机号搜索" value="<%= params[:table_search] %>">
            </div>
          </div>

          <div class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
          </div>
        </div>
      <% end %>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
      <table class="table table-striped">
        <tbody>
        <tr>
          <th>发布人（不填默认）</th>
          <th>联系号码</th>
          <th>消息类型</th>
          <th>关联用户（关联课显示头像）</th>
          <th>内容</th>
          <th style="width: 20%"></th>
        </tr>
        <% @public_messages.each do |public_message| %>
          <%= render partial: 'admin/public_messages/message', locals: {message: public_message}%>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="box-footer clearfix">
      <div class="pull-right pagination-sm no-margin">
        <%= paginate @public_messages, params: {status: params[:status], public_message_type: params[:public_message_type], table_search: params[:table_search]}%>
      </div>

    </div>
  </div>
</div>


