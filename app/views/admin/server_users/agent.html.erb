<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">×</span></button>
  <h4 class="modal-title">所属代理商</h4>
</div>
<div class="modal-body">
  <%= simple_form_for  @admin, url: '', class: 'forms-sample' do |f| %>
    <div class="box-body">
      <div class="row">
        <div class="col-md-12 form-group">
          <%= f.input :agent_id, collection: Agent.all.collect{|agent| ["#{agent.company_name}-#{agent.name}", agent.id]}, label: '所属代理商', input_html: {style: 'width: 100%'} %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default pull-left" data-dismiss="modal">关闭</button>
  <button type="button" class="btn btn-primary set-admin">确认</button>
</div>

<script type=text/javascript>
  $(function(){
    $('select').select2();
    $('.set-admin').click(function(){
      showSpinner()
      $.ajax({
        type: 'POST',
        url: '<%= set_agent_admin_server_user_path %>',
        data: {agent_id: $('#admin_agent_id').val()},
        dataType: 'script',
        success: function (data) {

        }
      })
    })
  })
</script>