<div class="col-md-12">
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">配送服务人员列表
      </h3>
    </div>
    <div class="box-tools" style="margin-top: 10px;">
      <%= form_tag admin_server_users_path, method: :get do %>
        <div class="input-group input-group-sm">
          <div>
            <div class="col-xs-6 col-md-6"></div>
            <div class="col-xs-6 col-md-3"></div>
            <div class="col-xs-6 col-md-3">
              <input type="text" name="table_search" class="form-control" placeholder="姓名、手机号检索" value="<%= params[:table_search] %>">
            </div>
          </div>

          <div class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
          </div>
        </div>
      <% end %>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
      <table class="table table-striped">
        <tbody>
          <tr>
            <th>姓名</th>
            <th>手机号</th>
            <th>累计佣金</th>
            <th>已提现</th>
            <th>当前余额</th>
            <th></th>
          </tr>
          <% @admins.each do |admin| %>
            <%= render partial: 'admin/server_users/user', locals: {admin: admin} %>
          <% end %>
        </tbody>

      </table>
    </div>
    <div class="box-footer clearfix">
      <div class="pull-right pagination-sm no-margin">
        <%= paginate @admins, params: {table_search: params[:table_search]} %>
      </div>

    </div>
  </div>
</div>


