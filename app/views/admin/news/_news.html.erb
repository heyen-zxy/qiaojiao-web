<tr id="news_<%= news.id %>">
  <td><%= news.content %></td>
  <td><%= news.get_status %></td>
  <td>
    <% if can? :news, :change_status %>
      <% if news.status == 'on' %>
        <%= link_to 'JavaScript:void(0)', onclick: "change_status(#{news.id}, 'off')", class: "btn btn-default btn-xs" do %>
          <i class="fa fa-close"></i>无效
        <% end %>
      <% else %>
        <%= link_to 'JavaScript:void(0)', onclick: "change_status(#{news.id}, 'on')", class: "btn btn-success btn-xs" do %>
          <i class="fa fa-check"></i>生效
        <% end %>
      <% end %>
    <% end %>

    <%= link_to admin_news_path(news), 'data-confirm': "确认删除吗", method: 'delete',class: "btn btn-danger btn-xs" do %>
      <i class="fa fa-close"></i>删除
    <% end %>
  </td>
</tr>